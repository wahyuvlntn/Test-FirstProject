<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_layer"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_layer"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Username"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:id="@+id/et_username"
            android:background="#DCDCDC"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="Username"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_layer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#DCDCDC"
            android:hint="Email"></EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/third_layer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#DCDCDC"
            android:hint="Password"
            android:inputType="textPassword"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth_layer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Confirm Password"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#DCDCDC"
            android:hint="Confirm Password"
            android:inputType="textPassword"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixth_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifth_layer"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/custom_next_button"
            android:backgroundTint="@color/coba"
            android:text="NEXT"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seventh_layer"
        android:layout_below="@id/sixth_layer">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Already have an account?"
            android:linksClickable="true"
            android:textSize="15dp"
            android:gravity="center">
        </TextView>

    </LinearLayout>

</RelativeLayout>